---
import Layout from "../layouts/Layout.astro";
import Bagde from "../components/Bagde.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedinIcon from "../components/icons/Linkedin.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="w-full lg:w-[740px] py-32 dark:text-white">
      <img
        class="rounded-full w-8 h-8 mb-3"
        src="/storage/jfloresxc-logo.jpeg"
        alt="jflorexc logo"
      />
      <h1 class="text-5xl font-bold flex flex-row pb-10">
        Hey, soy jfloresxc <a
          href="https://www.linkedin.com/in/jfloresxc/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-row justify-center items-center ml-4"
        >
          <Bagde>Disponible para trabajar</Bagde>
        </a>
      </h1>
      <h2 class="text-wrap text-2xl">
        +2 años de experiencia. <span class="dark:text-yellow-200"
          >Desarrollador Web e Ingenierio de Sistemas.</span
        > De Lima, Perú. Especializado en crear aplicaciones únicas.
      </h2>

      <ul class="flex gap-x-4 mt-3">
        <SocialPill href="https://www.linkedin.com/in/jfloresxc/">
          <LinkedinIcon class="w-6 h-6" />
          Linkedin
        </SocialPill>
        <SocialPill href="https://jfloresxc.github.io/">
          <GithubIcon class="w-6 h-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:jfloresxc@gmail.com">
          <MailIcon class="w-6 h-6" />
          Email
        </SocialPill>
      </ul>
    </section>
  </main>
</Layout>

